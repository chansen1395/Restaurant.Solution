@{
  Layout = "_Layout";
}

@using Food.Models;

<h1>Cuisine Types:</h1>

@if (@Model.Count == 0)
{
  <h4>No Cuisine Types have been added yet!</h4>
}

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId})</li>
  }
</ul>

<p>@Html.ActionLink("Create a new Cuisine category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>